<?xml version="1.0"?>
<assembly>
    <id>plugin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <scope>runtime</scope>
            <useStrictFiltering>true</useStrictFiltering>
            <outputDirectory>${file.separator}</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}${file.separator}..</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>LICENSE.txt</include>
                <include>NOTICE.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}${file.separator}..${file.separator}security</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <includes>
                <include>tools${file.separator}**</include>
                <include>sgconfig${file.separator}**</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>${file.separator}</outputDirectory>
            <includes>
                <include>plugin-descriptor.properties</include>
                <include>plugin-security.policy</include>
                <include>THIRD-PARTY.txt</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>

